@model ViewModels.LogInVM

@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Log In</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body class="bg-light">
    <div class="container-fluid">
        <div class="row">
            <div class="d-flex justify-content-center ">
                <div class="card col-lg-4 mt-5 shadow-lg">
                    <div class="card-header text-bg-primary ">Login</div>
                    <div class="card-body m-3">
                        <form asp-action="LogIn" >
                            <div class="form-floating mt-3">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group">
                                    <label asp-for="UserName" class="control-label"></label>
                                    <input asp-for="UserName" class="form-control" />
                                    <span asp-validation-for="UserName" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Password" class="control-label"></label>
                                    <input asp-for="Password" class="form-control" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="form-group form-check mt-2">
                                    <label class="form-check-label">
                                        <input class="form-check-input" asp-for="RemmemberMe" /> @Html.DisplayNameFor(model => model.RemmemberMe)
                                    </label>
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="Login" class="btn btn-success w-100 mt-3" />
                                </div>
                            </div>
                        </form>
                        <div class="form-group mt-3">
                            <p class="text-center text-muted  mb-0">
                                Not a Member? <a asp-action="Register" asp-controller="Account" class="fw-bold text-body"><u>Register Now</u></a>
                            </p>                          
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>

